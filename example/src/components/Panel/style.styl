@import '../../styles/variable.styl'

.panel-area
  flex 2
  display flex
  flex-direction column
  align-items center
  .panel
    max-height 100vh
    overflow auto
    padding 40px 50px
    border-radius 5px
    background rgba(255, 255, 255, 0.8)
    backdrop-filter blur(10px)
    display flex
    flex-direction column
    .panel-tabs
      display flex
      cursor pointer
      input
        display none
      .tab
        position relative
        padding 8px
        width 120px
        border 1px solid $color-primary
        text-align center
        color $color-primary
        cursor pointer
        transition background 0.2s, color 0.2s
        &:hover
          background $color-primary-pale
        &:active
          background $color-primary
          color #FFFFFF
      .tab ~ .tab
        margin-left -1px
      input:checked + .tab
        z-index 1
        background $color-primary
        color #FFFFFF
      .tab:first-of-type
        border-radius 5px 0 0 5px
      .tab:last-of-type
        border-radius 0 5px 5px 0
    ul.panel-list
      width 100%
      height 486px
      padding 30px 0
      display flex
      flex-direction column
      gap 20px
      list-style-type none
      font-size 14px
      .panel-item
        display flex
        flex-direction column
        gap 4px
        .panel-item-header
          display flex
          align-items center
          justify-content space-between
          cursor default
          .panel-item-value
            position relative
            color $color-primary
        input[type=range]
          -webkit-appearance none
          background-color transparent
          outline none
          border none
          height 14px
          flex 1 1 auto
        input[type=range]::-webkit-slider-runnable-track
          -webkit-appearance none
          height 2px
          border-radius 2px
          background $light-gray
        input[type=range]::-webkit-slider-thumb
          -webkit-appearance none
          width 14px
          height 14px
          margin-top -6px
          background white
          border 2px solid $color-primary
          box-shadow 0 0 0 3px $color-primary-pale
          border-radius 50%
          cursor pointer
          transition transform 0.2s
          &:hover
            transform scale(1.08)
        .color-info
          display flex
          justify-content space-between
          align-items center
          margin-left 1px
          margin-top 4px
          .color-swatches
            display flex
            gap 8px
            .color-swatch
              width 16px
              height 16px
              border-radius 50%
              cursor pointer
          .color-display
            position relative
            input[type='color']
              position absolute
              width 100%
              height 100%
              padding 0
              opacity 0
              cursor pointer
            .color-value
              width 18px
              height 18px
              border-radius 5px
              border 1px solid $light-gray
